{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended",  "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "ignorePatterns": ["dist"]
}